{% extends 'base.html.twig' %}

{% block title 'Hitech Solutions | créer un compte' %}

{% block stylesheets %}
    {{ parent() }}
    
    <style>
        .login-small-title {
            color: #f77700;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="site-breadcrumb" style="background: url({{ asset('template/img/breadcrumb/breadcrumb.jpg') }})">
        <div class="container">
            <h2 class="breadcrumb-title">Créer un compte</h2>
            <ul class="breadcrumb-menu">
                <li><a href="index-2.html">Accueil</a></li>
                <li class="active">Créer un compte</li>
            </ul>
        </div>
    </div>
<div class="login-area py-120">
    <div class="container">
        <div class="col-md-5 mx-auto">
            <div class="login-form">
                <div class="login-header">
                    <img src="{{ asset('template/img/logo/h_logo.jpg') }}" alt="">
                    <p class="login-small-title">Veuillez remplir tous les champs!</p>
                </div>
                {{ form_start(registrationForm) }}

                    {{ form_errors(registrationForm) }}
                <div class="form-group">
                    {{ form_row(registrationForm.first_name, {attr: {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.last_name, {attr: {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.email, {attr: {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, {attr: {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
                </div>

                <div class="d-flex align-items-center">
                    <button type="submit" class="theme-btn" FormNoValidate><i class="far fa-paper-plane"></i> Enregistrer</button>
                </div>
                {{ form_end(registrationForm) }}
                <div class="login-footer">
                    <p>Vous avez déja un compte? <strong><a href="{{ path('app_login') }}" style="text-decoration: underline">Se connecter</a></strong></p>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
