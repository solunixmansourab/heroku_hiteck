{% extends 'base.html.twig' %}

{% block body %}

    {% include 'account/partials/breadcrumb.html.twig' %}

    <div class="shop-checkout py-120">
        <div class="container">
            <div class="row">

                {% include 'account/partials/menu_left.html.twig' %}

                <div class="col-lg-8">
                    <div class="checkout-widget">
                        <h4 class="checkout-widget-title text-center mb-4">Détails de la commande (ID)</h4>
                        <table class="table">
                            <thead class="table-light">
                            <tr>
                                <td><strong>ID</strong></td>
                                <td><strong>Commande ID</strong></td>
                                <td><strong>Titre du produit</strong></td>
                                <td><strong>Quantité</strong></td>
                                <td><strong>Prix</strong></td>
                                <td><strong>Total</strong></td>
                                <td><strong>Actions</strong></td>
                            </tr>
                            </thead>
                            <tbody>
                            {% for detail in details %}
                                <tr>
                                    <td>{{ detail.id }}</td>
                                    <td>{{ detail.myOrder }}</td>
                                    <td>{{ detail.product }}</td>
                                    <td>{{ detail.quantity }}</td>
                                    <td>{{ detail.price }} Fcfa</td>

                                    <td>{{ detail.total }}</td>
                                    <td>
                                        <a href="{{ path('app_order_show') }}" class="px-1 text-end"><i class="fas fa-eye"></i></a>
                                        <a href="" class="px-1 text-end text-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

