{% extends 'base.html.twig' %}

{% block title 'Hitech Solutions | Réinitialiser votre mot de passe' %}

{% block body %}

    <div class="site-breadcrumb" style="background: url({{ asset('template/img/breadcrumb/breadcrumb.jpg') }})">
        <div class="container">
            <h2 class="breadcrumb-title">Reinitialiser votre mot de passe</h2>
            <ul class="breadcrumb-menu">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="active">Mot de passe oublié</li>
            </ul>
        </div>
    </div>


    <div class="login-area py-120">
        <div class="container">
            <div class="col-md-5 mx-auto">
                <div class="login-form">
                    <div class="login-header">
                        <img src="{{ asset('template/img/logo/logo.png') }}" alt="">

                        <p>Veuillez entrer votre adresse email</p>
                    </div>
                    <form action="#">
                        <div class="form-group">
                            <label>Email *</label>
                            <input type="email" class="form-control" placeholder="Entrer votre adresse mail">
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="submit" class="theme-btn">
                                <i class="far fa-key"></i> Réinitialiser
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
