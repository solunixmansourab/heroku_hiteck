{% block content %}
   <main class="page-content">

      <!--breadcrumb-->
      <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
         <div class="breadcrumb-title pe-3">Produits | catégories</div>
         <div class="ps-3">
            <nav aria-label="breadcrumb">
               <ol class="breadcrumb mb-0 p-0">
                  <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">Liste des catégories des produits</li>
               </ol>
            </nav>
         </div>
         <div class="ms-auto">
            <a href="{{ path('app_product_category_new') }}" class="btn btn-primary">Ajouter une catégorie</a>
         </div>
      </div>

      <div class="card">
         <div class="card-body">
            <div class="table-responsive">
               <table id="example" class="table table-striped table-bordered" style="width:100%">
                  <thead>
                  <tr>
                     <th>ID</th>
                     <th>Titre</th>
                     <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for category in productCategories %}
                     <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                           <div class="d-flex justify-content-end gap-3 fs-6">
                              <a href="#" class="text-primary"><i class="bi bi-eye-fill"></i></a>
                              <a href="{{ path('app_product_category_edit', {id: category.id}) }}" class="text-warning"><i class="bi bi-pencil-fill"></i></a>
                              <form method="post" action="{{ path('app_product_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
                                 <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                 <button class="btn p-0"><span class="text-danger"><i class="bi bi-trash-fill"></i></span></button>
                              </form>
                           </div>
                        </td>
                     </tr>
                  {% endfor %}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </main>
{% endblock %}
