{{ form_start(form) }}
<div class="card-header py-3 bg-transparent">
    <div class="d-sm-flex align-items-center">
        <h5 class="mb-2 mb-sm-0">Ajouter ou modifier un service</h5>
        <div class="ms-auto">
            <button type="submit" class="btn btn-primary" formnovalidate>Sauvegarder</button>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="row g-3">
        <div class="col-12">
            <div class="card shadow-none bg-light border">
                <div class="card-body">
                    <div class="col-12 mt-2">
                        {{ form_row(form.title, {attr: {'class': 'form-control mt-1'}}) }}
                    </div>
                    <div class="col-12 mt-2">
                        {{ form_row(form.content, {attr: {'class': 'form-control mt-1'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div><!--end row-->
</div>
