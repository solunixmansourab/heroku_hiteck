{% block content %}
    
    <main class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Partenaires</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Nos Partenaires</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <a href="{{ path('app_partner_new') }}" class="btn btn-primary btn-sm px-3 py-2">Ajouter un partenaire <i class="bx bx-plus-circle"></i></a>
            </div>
        </div>

        <div class="card">
        
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Logo de la société</th>
                        <th>Nom de la société</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for partner in partners %}
                        <tr>
                            <td>{{ partner.id }}</td>
                            <td>
                                <img src="{{ asset('uploads/images/products/covers/' ~ partner.image) }}" class="partner-image"/>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <!--pagination-->
                <div class="pagination">
                    {{ knp_pagination_render(partners, 'admin/layouts/pagination.html.twig') }}
                </div>
                <!--end pagination-->
            </div>
        </div>
    </div>
    </main>

{% endblock %}