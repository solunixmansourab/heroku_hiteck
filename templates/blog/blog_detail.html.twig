{% extends 'base.html.twig' %}

{% block body %}

    <div class="site-breadcrumb" style="background: url({{ asset('template/img/breadcrumb/breadcrumb.jpg') }})">
        <div class="container">
            <h2 class="breadcrumb-title">Détails de l'article</h2>
            <ul class="breadcrumb-menu">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="active">Article</li>
            </ul>
        </div>
    </div>

    <div class="blog-single-area pt-120 pb-120">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog-single-wrapper">
                        <div class="blog-single-content">
                            <div class="blog-thumb-img">
                                <img src="{{ asset('uploads/post_images/'~post.postImage) }}" alt="thumb" width="760" height="500">
                            </div>
                            <div class="blog-info">
                                <div class="blog-meta">
                                    <div class="blog-meta-left">
                                        <ul>
                                            <li><i class="far fa-user-circle"></i> Créé par {{ post.user.firstName }}</li>
                                            <li><i class="far fa-calendar-alt"></i> {{ post.createdAt|ago(locale='fr') }}</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="blog-details">
                                    <h3 class="blog-details-title mb-20">{{ post.title }}</h3>
                                    <p class="mb-10">
                                        {{ post.content|raw }}
                                    </p>
                                    <hr>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <aside class="sidebar">

                        <div class="widget search">
                            <h5 class="widget-title">Recherche</h5>
                            <form class="search-form">
                                <input type="text" class="form-control" placeholder="Entrer votre recherche...">
                                <button type="submit"><i class="far fa-search"></i></button>
                            </form>
                        </div>

                        <div class="widget category">
                            <h5 class="widget-title">Les catégories</h5>
                            <div class="category-list">
                                {% for category in categories %}
                                    <a href="#"><i class="far fa-angle-double-right"></i>{{ category.name }}<span>({{ category.posts|length }})</span></a>
                                {% endfor %}
                                
                            </div>
                        </div>

                        <div class="widget recent-post">

                            <h5 class="widget-title">Articles Récents</h5>

                            {% for post in recents %}
                            <div class="recent-post-single">
                                <div class="recent-post-img">
                                    <img src="{{ asset('uploads/post_images/'~post.postImage) }}" alt="thumb">
                                </div>
                                <div class="recent-post-bio">
                                    <h6><a href="#">{{ post.title }}</a></h6>
                                    <span><i class="far fa-clock"></i>{{ post.createdAt|date("d-m-Y") }}</span>
                                </div>
                            </div>
                            {% endfor %}
                        </div>

                        <div class="widget social-share">
                            <h5 class="widget-title">Follow Us</h5>
                            <div class="social-share-link">
                                <a href="https://web.facebook.com/hts.niger"><i class="fab fa-facebook-f"></i></a>
                                <a href="https://www.linkedin.com/in/edmond-doudou-moctar-36183596"><i class="fab fa-linkedin"></i></a>
                                <a href="https://twitter.com/hts_niger"><i class="fab fa-twitter"></i></a>
                            </div>
                        </div>

                    </aside>
                </div>

            </div>
        </div>
    </div>

{% endblock %}